        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "All Pester Tests",
            "script": "${workspaceRoot}\\UKHO.ADM.Tests\\Run-Tests.ps1",
            "args": [],
            "cwd": "${workspaceRoot}"
        },        
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File in Temporary Console",
            "script": "${file}",
            "args": [],
            "cwd": "${file}",
            "createTemporaryIntegratedConsole": true
        }
    ]
}